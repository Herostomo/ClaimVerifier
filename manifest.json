{
  "manifest_version": 3,
  "name": "ClaimVerifier",
  "version": "0.1",
  "description": "Verify selected text against fact-checks (MVP).",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
  "https://api.bing.microsoft.com/*",
  "https://gnews.io/*",
  "https://*.rapidapi.com/*",
  "https://api.searchapi.io/*",
  "<all_urls>"
],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
